{
  "compilerOptions": {
    "lib": [
      "es6",
      "esnext"
    ],
    "importHelpers": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build/compiled",
    "declaration": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}